# ===========================================
# SIMTIX ENVIRONMENT CONFIGURATION
# ===========================================

# ============ MIDTRANS CONFIGURATION ============
MIDTRANS_SERVER_KEY=your_server_key_here
MIDTRANS_CLIENT_KEY=your_client_key_here
MIDTRANS_IS_PRODUCTION=false
# Set to 'true' untuk production, 'false' untuk sandbox/testing

# ============ APPLICATION URLS ============
# Development URLs (untuk development lokal)
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Production URLs (ganti dengan hosting sesungguhnya)
# BACKEND_URL=https://api-simtix.yourdomain.com
# FRONTEND_URL=https://simtix.yourdomain.com

# ============ DATABASE CONFIGURATION ============
# Development Database (Laragon MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=u390486773_simtix
DB_USER=root
DB_PASSWORD=

# Production Database (ganti dengan hosting database)
# DB_HOST=your_database_host.com
# DB_PORT=3306
# DB_NAME=your_production_database_name
# DB_USER=your_production_db_username
# DB_PASSWORD=your_production_db_password

# ============ JWT & SECURITY ============
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters_long_for_maximum_security
SESSION_SECRET=your_session_secret_here

# ============ EMAIL CONFIGURATION ============
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM="SimTix Security <noreply@simtix.com>"

# ============ FILE UPLOAD ============
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
# 5MB in bytes

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============ CORS ORIGINS ============
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
# Tambahkan domain production di sini untuk production

# ============ NODE ENVIRONMENT ============
NODE_ENV=development
# Set to 'production' untuk production

PORT=5000